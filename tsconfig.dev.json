{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false,
		"incremental": true,
		"tsBuildInfoFile": "./lib/.tsbuildinfo"
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.stories.ts",
		"**/*.stories.tsx",
		"**/*.scss"
	]
}
